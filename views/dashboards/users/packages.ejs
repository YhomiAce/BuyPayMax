                <div class="col-md-3">
            <div class="card d-block">
                <div class="card-body text-center">
                    
                    <h5 class="card-title mb-4"><%= packages[i]['name'] %> Plan</h5>
                        <h3 class="card-text"><%= numFormatter(packages[i]['fromPrice']) %>- <%= numFormatter(packages[i]['toPrice']) %></h3>
                            <hr>
                    
                    <p>Commission =  <%= packages[i]['commission'] %> %</p>
                    <hr>
                                        <p>Plan Duration = <%= packages[i]['duration'] %> Months</p>
                    <hr>
                    
                                        <p>Admin Charge = <%= packages[i]['charge'] %>%</p>
                    <hr>
                    <p>Bonus =  <%= packages[i]['bonus'] %> </p>
                    <hr>
                    
                   
                    <a href="invest/<%= packages[i]['id'] %>" class="btn btn-warning" >Invest Now</a>
                                    </div> <!-- end card-body-->
            </div>
        </div>

      
