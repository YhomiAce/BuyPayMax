<!-- header -->
<%- include("../../partials/header") %>
<%- include("../../partials/user_sidebar") %>
<!-- Main Content -->
<div class="main-content">
    <%- include("../../partials/alerts") %>
    <section class="section">
        <div class="row ">
            <% for(let i=0; i<coins.length; i++) { %>     
                <div class="col-lg-6 col-md-6 col-sm-4 col-12">
                    <div class="card card-statistic-1">
                        <div class="card-icon l-bg-cyan">
                            <i class="fas fa-wallet"></i>
                        </div>
                        <div class="card-wrap">
                            <div class="padding-20">
                                <div class="text-right">
                                    <h3 class="font-light mb-0">
                                        <i class="ti-arrow-up text-success"></i><%= coins[i].balance %> <%= coins[i].coinTypes.symbol %>
                                    </h3>
                                    <span class="text-muted">PayBuyMax Amount: N<%= Number(coins[i].balance) * Number(coins[i].coinTypes.rate).toFixed(1)  %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %> 
        </div>
    </section>

    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <form action="/sell-coin" method="POST" class="needs-validation" novalidate=""
                        id="withdarawForm">
                        <div class="card">
                            <div class="card-header">
                                <h4>Sell From Wallet</h4>
                            </div>
                            <div class="card-body">
                                
                                <div class="form-group">
                                    <label for="">Choose Wallet Address</label>
                                    <select name="coinId" id="coinId" class="form-control" required>
                                        <option value="" disabled selected>Select Coin</option>
                                        <% for(let i=0; i< products.length; i++) { %> 
                                        <option value="<%= products[i].id  %>"><%= products[i].name  %></option>
                                        <% } %> 
                                    </select>
                                    <div class="invalid-feedback">
                                        Please select your wallet address
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label for="name">Amount</label>
                                    <input type="number" class="form-control" step="any" name="amount" tabindex="1" required
                                        autofocus>
                                    <div class="invalid-feedback">
                                        Please fill in amount
                                    </div>
                                </div>
                                 
                            </div>
                            <input type="hidden" class="form-control" name="userId" required>
                            <div class="card-footer text-right">
                                <button class="btn btn-primary mr-1" type="submit">Sell Coin</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
<%- include("../../partials/user_footer2") %>

</body>

</html>