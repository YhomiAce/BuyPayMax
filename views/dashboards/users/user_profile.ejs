<!-- header -->
<%- include("../../partials/header") %>
<%- include("../../partials/user_sidebar") %>
<!-- Main Content -->
<div class="main-content">
    <%- include("../../partials/alerts") %>
    <section class="section">
        <div class="row ">
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="card">
                    <div class="card-statistic-4">
                        <div class="align-items-center justify-content-between">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pr-0 pt-3">
                                    <div class="card-content">
                                        <p></p>
                                        <h2 class="font-18"><i class="fas fa-wallet"
                                                style="color: blue; margin-right: 5px;"
                                                aria-hidden="true"></i></i>Wallet</h2>
                                        <p></p>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pl-0 pt-3">
                                    <div class="card-content">
                                        <p></p>
                                        <h2 class="font-18  ml-3">$<%= user.wallet %>.00</h2>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="card">
                    <div class="card-statistic-4">
                        <div class="align-items-center justify-content-between">
                            <div class="row ">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pr-0 pt-3">
                                    <div class="card-content">
                                        <p></p>
                                        <h2 class="font-18"><i class="fas fa-link"
                                                style="color: blue; margin-right: 4px;"
                                                aria-hidden="true"></i></i>Referrals</h2>
                                        <p></p>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pl-0 pt-3">
                                    <div class="card-content">
                                        <p></p>
                                        <h2 class="font-18  ml-3"><%= referrals.length %></h2>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <section>
        <div class="section-body">
            <div class="row">
                <div class="col-sm-3 offset-sm-2">
                    <div class="card">
                        <div class="card-statistic-4">
                            <div class="align-items-center justify-content-between">
                                <% if(!twoway) { %>
                                <div class="pretty p-switch p-fill">
                                    <input type="checkbox" id="twofa" />
                                    <div class="state p-success">
                                        <label>2-Factor Authentication</label>
                                    </div>
                                </div>
                                <% }  else { %>
                                <div class="pretty p-switch p-fill">
                                    <button class="btn btn-outline-primary mr-1" id="twofa">OFF</button>
                                    <label>2-Factor Authentication</label>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3 offset-sm-2">
                    <div class="card">
                        <div class="card-statistic-4">
                            <div class="align-items-center justify-content-between">
                                <% if(!email_auth) { %>
                                <div class="pretty p-switch p-fill">
                                    <input type="checkbox" id="emailfa" />
                                    <div class="state p-success">
                                        <label>Email Authentication</label>
                                    </div>
                                </div>
                                <% }  else { %>
                                <div class="pretty p-switch p-fill">
                                    <button class="btn btn-outline-primary mr-1" id="emailfa">OFF</button>
                                    <label>Email Authentication</label>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <form action="/editprofile" method="POST" class="needs-validation" novalidate="">
                        <div class="card">
                            <div class="card-header">
                                <h4>User Profile</h4>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="name">Name</label>
                                    <input type="text" class="form-control" name="name" tabindex="1" required autofocus
                                        value="<%= user.name %>" disabled>
                                    <div class="invalid-feedback">
                                        Please fill in name
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="">Email</label>
                                    <input type="text" class="form-control" name="email" tabindex="1" required autofocus
                                        value="<%= user.email %>" disabled>
                                    <div class="invalid-feedback">
                                        Please fill in email
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="">Phone</label>
                                    <% if(!edit) { %>
                                    <input type="text" class="form-control" name="phone" tabindex="1" required autofocus
                                        value="<%= user.phone %>" disabled>
                                    <% }  else { %>
                                    <input type="text" class="form-control" name="phone" tabindex="1" required autofocus
                                        value="<%= user.phone %>">
                                    <% } %>
                                    <div class="invalid-feedback">
                                        Please fill in phone number
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-right">
                                <% if(!edit) { %>
                                <a href="/editprofile" class="btn btn-primary mr-1">Edit</a>
                                <% }  else { %>
                                <button class="btn btn-primary mr-1" type="submit">Update</button>
                                <% } %>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
<%- include("../../partials/user_footer2") %>
<script src="/js/two_fa.js"></script>
</body>

</html>