<%- include("../../partials/header") %>
<%- include("../../partials/user_sidebar") %>

<div class="main-content">
    <%- include("../../partials/alerts") %>
    <section class="section mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <marquee behavior="scroll" direction="left">Naira to dollar</marquee>
            </div>
        </div>
            
    </section>

    <section class="section mt-5">
        <div class="row">
            
            <div class="col-md-6">
                <img src="<%= coins.image %>" alt="">
                <h2>Name: <%= coins.name %></h2>
                <h3>Current Price: <span class="text-success">$<%= coins.current_price. toLocaleString() %></span></h3>
                <p style="display: none;" id="currentPrice"> <%=  coins.current_price %>  </p>
            </div>
            <div class="col-md-6">
                <form action="">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Amount <%= coins.symbol %></label>
                                <input type="number" id="amount" name="amount" step="0.0000000000001" class="form-control" required>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Wallet Address</label>
                                <input type="text" name="wallet" class="form-control" required>
                            </div>
                        </div>
                        
                        
                    </div>
                    <div class="form-group">
                        <select name="agent" id="agent" class="form-control">
                            <option value="" disabled selected>Select Trader</option>
                            <option value="agent1">Trader1</option>
                            <option value="agent2">Trader2</option>
                            <option value="agent3">Trader3</option>
                        </select>
                    </div>
                    <h2 id="price" style="display: none;"></h2>
                        <a href="javascript: void(0);" class="btn btn-warning" data-toggle="modal" id = "payBtn" data-target="#payNow">Start Now</a>
                </form>
            </div>
        </div>
        
        
        
    </section>
</div>
<div class="modal fade" id="payNow" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <!-- <h4 class="modal-title" id="myCenterModalLabel">Payment for: </h4> -->
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            </div>
            <div class="modal-body">
                <center>
                    <img src="https://chart.googleapis.com/chart?chs=300x300&amp;cht=qr&amp;chl=1B2GbofYB6Y3D39f4Ag6aDCWJUcxgyRuwC" class="img-fluid">
                    <p class="text-muted font-16" id="statement"></p>
                    <h3 class="mb-0">Bitcoin Address</h3>
                    <input id="walletAddress" class="text-muted font-18 form-control text-center border-0 bg-white" value="
                    bc1qxy2kgdygjrsqtzq2n0yrf2493p83kkfjhx0wlh" readonly="">
                    <p class="text-muted font-13 mt-1">
                       
                        <form action="#" method="POST">
                            <input type="hidden" name="idd" >
                            <input type="hidden" name="amount" >
                            <button class="btn btn-info" id="confirmPayment">Confirm Payment</button></p>
                    </form>
                       
                </center>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

<%- include("../../partials/user_footer2") %>

