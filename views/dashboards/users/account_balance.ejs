<!-- header -->
<%- include("../../partials/header") %>
<%- include("../../partials/user_sidebar") %>
<!-- Main Content -->
<div class="main-content">
    <%- include("../../partials/alerts") %>
    <section class="section">
        <div class="row ">
            <% for(let i=0; i<coins.length; i++) { %>     
                <div class="col-lg-6 col-md-6 col-sm-4 col-12">
                    <div class="card card-statistic-1">
                        <div class="card-icon l-bg-cyan">
                            <i class="fas fa-wallet"></i>
                        </div>
                        <div class="card-wrap">
                            <div class="padding-20">
                                <div class="text-right">
                                    <h3 class="font-light mb-0">
                                        <i class="ti-arrow-up text-success"></i><%= coins[i].balance %> <%= coins[i].coinTypes.symbol %>
                                    </h3>
                                    <span class="text-muted">PayBuyMax Amount: <%= Intl.NumberFormat('de-DE', { style: 'currency', currency: 'NGN' }).format((Number(coins[i].balance) * Number(coins[i].coinTypes.rate)).toFixed(3))   %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %> 
            <div class="col-lg-6 col-md-6 col-sm-4 col-12">
                <div class="card card-statistic-1">
                    <div class="card-icon l-bg-cyan">
                        <i class="fas fa-wallet"></i>
                    </div>
                    <div class="card-wrap">
                        <div class="padding-20">
                            <div class="text-right">
                                <h3 class="font-light mb-0">
                                    Naira Account Balance
                                    <i class="ti-arrow-up text-success"></i><%= Intl.NumberFormat('de-DE', { style: 'currency', currency: 'NGN' }).format(wallet.toFixed(3))  %>
                                </h3>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section">
        <div class="section-body">
            <div class="row">
                
            </div>
        </div>
    </section>

</div>
<%- include("../../partials/user_footer2") %>

</body>

</html>