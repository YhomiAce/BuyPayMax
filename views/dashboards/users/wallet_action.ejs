<!-- header -->
<%- include("../../partials/header") %>
<%- include("../../partials/user_sidebar") %>
<!-- Main Content -->
<div class="main-content">
    <%- include("../../partials/alerts") %>
    <div class="row jsutify-content-center ml-5">
        <div class="col-md-12">
            <div class="alert alert-info alert-dismissible fade show mb-4 " role="alert" style="max-width: 80%; background-color:#776d6d; color: #ffffff;">
                <strong>Important notice:</strong>&nbsp;&nbsp;<span>CALL CUSTOMER CARE TO CONFIRM PAYMENT ON </span>
                <p>01-2299629</p> <p>0912 916 6826</p>
                <p></p>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="row ">
            <input type="hidden" id="user_email" value="<%= user.email %>">
            <input type="hidden" id="user_phone" value="<%= user.phone %>">
            <input type="hidden" id="user_name" value="<%= user.name %>">
            <div class="col-lg-12 col-md-12 col-sm-6 col-12">
               <div class="card">
                   <div class="card-header">
                        <h4>Fund Crypto Wallet</h4>
                        <button class="btn btn-primary float-right" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                            <i class="fas fa-arrow-down"></i>
                        </button>
                   </div>
                   <div class="card-body" id="collapseExample">

                        <form action="/createcheckout" method="post">
                            <div class="form-group">
                                <label for="">Amount (In USD)</label>
                                <input type="number" step="any" class="form-control" name="amount" id="usd-amount">
                            </div>
                            <button type="button" class="btn btn-primary" onclick="payWithCryptos()" >FUND CRYPTO WALLET</button>
                        </form>
                   </div>
               </div>
            </div>
            
            
             
        </div>  
           
            
    </section>

    <section class="section">

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-6 col-12">
                <div class="card">
                    <div class="card-header">
                         <h4>Fund Your Naira Wallet</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="">Amount (In Naira)</label>
                            <input type="number" step="any" class="form-control" id="naira-amount">
                        </div>
                        <button type="button" class="btn btn-primary" onclick="payWithPaystack()">FUND NAIRA WALLET</button>
                    </div>
                </div>
            </div>
        </div>

        
    </section>

    <section class="section">
        
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-6 col-12">
                <div class="card">
                    <div class="card-header">
                         <h4>Direct Bank Transfer</h4>
                    </div>
                    <div class="card-body">
                        <div>
                            <a target="_blank" class="donate-with-crypto btn-primary btn"
                               href="https://commerce.coinbase.com/checkout/53cf60be-4b35-4e43-8987-27071f3c5364">
                              <span >Donate with Crypto</span>
                            </a>
                            <script src="https://commerce.coinbase.com/v1/checkout.js">
                            </script>
                          </div>
                    </div>
                </div>
            </div>
        </div>

        
    </section>

</div>
<%- include("../../partials/user_footer2") %>

<!-- bitmint scripts -->
<script src="https://js.paystack.co/v1/inline.js"></script>
<script src="https://js.paylot.co/v1/inline.min.js"></script>
<script src="/js/payments.js"></script>
</body>

