<!-- header -->
<%- include("../partials/header_admin") %>
<%- include("../partials/sidebar") %>

<!-- Main Content -->
<div class="main-content">
    <%- include("../partials/alerts") %>
    <section class="section">
        <div class="section-body">
            
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4><%= type %>  Wallet Deposits</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped" id="table-1">
                                    <thead>
                                        <tr>
                                            <th class="text-center">#</th>
                                            <th>Email</th>
                                            <th>Amount</th>
                                            <th>Quantity</th>
                                            <th>Coin Type</th>
                                            <th>Reference</th>
                                            <th>Status</th>
                                            <th>Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%  for (let i = 0; i < deposits.length; i++ ) { %>
                                        <tr>
                                            <td><%= i + 1 %></td>
                                            <td><%= deposits[i].user.email %></td>
                                            <td><%= deposits[i].amountSent %></td>
                                            <td><%= deposits[i].quantity %></td>
                                            <td><%= deposits[i].coin.name %></td>
                                            <td><%= deposits[i].reference %></td>
                                            <td><%= deposits[i].status %></td>
                                            <td><%= moment(deposits[i].createdAt).format("DD-MMM-YYYY") %></td>
                                            <td>
                                                <a href="/view/coin-deposit/<%= deposits[i].id %>"
                                                    class="btn btn-primary btn-pill">View</a>
                                            </td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<%- include("../partials/footer2") %>