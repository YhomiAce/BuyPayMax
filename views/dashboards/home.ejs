    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-md-7 stretch-card grid-margin">
                    <div class="card">
                      <div class="card-body">
                        <h4>Notifications</h4>
                        <% if (notifications.length > 0 ) { %>
                            <ul class="icon-data-list">
                                <% for( let i = 0; i < notifications.length; i++ ) { %>
                                    
                                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                        <strong><%= notifications[i].message %></strong> 
                                        <br>
                                        <small><%= moment(notifications[i].createdAt).format("DD-MM-YYYY hh:mm A") %></small>
                                        
                                        <form action="/remove/notification" method="post">
                                            <input type="hidden" id="notifyId" name="id" value="<%=  notifications[i].id %> ">
                                            <button type="submit" class="close">
                                                <span aria-hidden="true" id="closeBtn">&times;</span>
                                            </button>
                                        </form>
                                    </div>
                                <% } %>
                             
                                
                             
                            </ul>
                        
                        <% } else { %>
                         <h4>No Active Notifications</h4>
                         <% } %>
                         
                      </div>
                    </div>
                </div>
                <div class="col-5">
                    <div class="card">
                        <div class="card-header">
                            <h4>Active Users</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped" id="table-1">
                                    <thead>
                                        <tr>
                                            <th class="text-center">#</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%  for (let i = 0; i < users.length; i++ ) { %>
                                        <tr>
                                            <td><%= i + 1 %></td>
                                            <td><%= users[i].name %></td>
                                            <td><%= users[i].email %></td>
                                            <td><%= moment(users[i].createdAt).format('DD-MM-YYYY') %></td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
