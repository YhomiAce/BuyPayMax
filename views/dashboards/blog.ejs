<%- include("../partials/header_admin") %>
<%- include("../partials/sidebar") %>


<!-- Blog Section Starts -->
<div class="main-content">
    <%- include("../partials/alerts") %>
    <section class="section">
        <div class="section-body">
      <div class="row">
        <div class="col-md-10">

            <!-- Blog One -->
            <div class="blog-block-container">
                <div class="blog-block">
                <div class="row blog-block-row">
                    <div class="col-md-8 blog-title-div">
                        <h2 class="blog-title"><%= posts.title  %> </h2>
                    </div>
                    <div class="col-md-12">
                        <img src="<%= posts.image %>" alt="Image" class="img-thumbnail" />
                    </div>
                    
                    
                </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mt-5">
                        <div class="blog-content">
                            <%= stripHtml(posts.body) %> 
                        </div>
                        <p class="text-muted">
                            <i class="fas fa-calendar"></i> <%= moment(posts.createdAt).format("LLLL") %>
                        </p>

                    </div>
                </div>
            </div>
            
            
        </div>
        
      </div>
      <div class="row">
          <% if (!posts.publish) { %>
            <div class="col-md-6">
              <form action="/publish-post" method="POST">
                  <input type="hidden" name="id" value="<%= posts.id %>">
                  <button class="btn btn-success" type="submit">Publish</button>
              </form>
            </div>
           
          <% } %>
          <div class="col-md-6">
            <form action="/delete-post" method="POST">
                <input type="hidden" name="id" value="<%= posts.id %>">
                <button class="btn btn-danger float-left" type="submit">Delete Post</button>
            </form>
          </div>
      </div>
    </div>
  </section>

<!--FAQ Section Ends-->
<script src="/assests/js/script.js"></script>

<%- include("../partials/footer2") %>