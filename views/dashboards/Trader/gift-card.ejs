<!-- header -->
<%- include("../../partials/header_admin") %>
<%- include("../../partials/sidebar") %>

<!-- Main Content -->
<div class="main-content">
    <%- include("../../partials/alerts") %>
   
    
        <section class="section">
            <div class="section-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12">
                        <form action="/giftcard/create-receipt" method="POST" class="needs-validation" novalidate="">
                            <input type="hidden" name="traderId" value="<%= admin.id  %> ">
                            <div class="card">
                                <div class="card-header">
                                    <h4>Generate Receipt For Gift Card Transactions</h4>
                                   
                                </div>
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="name">Customer Name</label>
                                        <input id="name" type="text" class="form-control" name="name" tabindex="1" required autofocus>
                                        <div class="invalid-feedback">
                                            Please fill in Customer name
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Customer Email</label>
                                        <input id="email" type="text" class="form-control" name="email" tabindex="1" required autofocus>
                                        <div class="invalid-feedback">
                                            Please fill in Customer Email
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="duration">GiftCard Type</label>
                                        <select name="cardId" id="card" class="form-control" required>
                                            <option value="" disabled selected>Select GiftCard</option>
                                            <% for(let i=0; i< products.length; i++) { %> 
                                            <option value="<%= products[i].id  %>"><%= products[i].name  %></option>
                                            <% } %> 
                                        </select>
                                    </div>

                                   
                                    <div class="form-group">
                                        <label for="name">Amount of Giftcard Received</label>
                                        <input type="number" class="form-control" step="any" name="quantity" id="qty" tabindex="1" required
                                            autofocus>
                                        <div class="invalid-feedback">
                                            Please fill in amount recieved
                                        </div>
                                        
                                    </div>
                                    <div class="form-group">
                                        <label for="name">Amount Paid to Customer</label>
                                        <input type="number" class="form-control" step="any" name="amountPaid" id="amount" tabindex="1" required
                                            autofocus>
                                        <div class="invalid-feedback">
                                            Please fill in amount paid
                                        </div>
                                        
                                    </div>
                                    <div class="form-group">
                                        <label for="">Account Name</label>
                                        <input type="text" class="form-control" id="act_name" name="acctName"
                                            tabindex="1" required autofocus>
                                        <div class="invalid-feedback">
                                            Please fill in your account name
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="">Account Number</label>
                                        <input type="text" class="form-control" name="acctNumber" tabindex="1" id="act_number"
                                            required autofocus>
                                        <div class="invalid-feedback">
                                            Please fill in account number
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="name">Bank Name</label>
                                        <input type="text" class="form-control" id="bankName" name="bankName" tabindex="1" required
                                            autofocus>
                                        <div class="invalid-feedback">
                                            Please fill in Bank Name
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer text-right">
                                    <button class="btn btn-primary btn-block"
                                    type="submit">Generate Receipt</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
<%- include("../../partials/footer2") %>
