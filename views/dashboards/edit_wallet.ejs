<!-- header -->
<%- include("../partials/header_admin") %>
<%- include("../partials/sidebar") %>

<!-- Main Content -->
<div class="main-content">
    <%- include("../partials/alerts") %>
   
    
        <section class="section">
            <div class="section-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12">
                        <form action="/update/wallet" method="POST"
                        
                            class="needs-validation" novalidate="">
                            <div class="card">
                                <div class="card-header">
                                    <h4> Edit New Wallet Address</h4>
                                   
                                </div>
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="duration">Wallet Type</label>
                                        <input type="text" readonly value="<%= wallet.coin.name  %> " class="form-control">
                                         
                                    </div>
                                    <div class="form-group">
                                        <label for="name">Balance Coin:  <%= wallet.balance %><%= wallet.coin.symbol  %>  </label>
                                        <input id="balance" name="balance" type="number" value="<%= wallet.balance %>" step="any" class="form-control" tabindex="1" autofocus>
                                        <div class="invalid-feedback">
                                            Please fill in Wallet Balance
                                        </div>
                                    </div>
                                    <% if(wallet.user && admin.level != 1) { %>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="userId" value="" id="flexCheckDefault" <%= wallet.user ? "" : 'checked'  %> >
                                            <label class="form-check-label" for="flexCheckDefault">
                                              <%= wallet.user ? "Unassign" : "Assign"  %>  
                                            </label>
                                        </div>
                                    <% } %> 
                                    <% if(!wallet.trader && admin.level != 2) { %>
                                        
                                        <div class="form-group">
                                            <label for="duration">Assign To Trader</label>
                                            <select name="traderId" id="traderId" class="form-control" required>
                                                <option value="" disabled selected>Select Trader</option>
                                                <% for(let i=0; i< traders.length; i++) { %> 
                                                <option value="<%= traders[i].id  %>"><%= traders[i].name  %></option>
                                                <% } %> 
                                            </select>
                                        </div>
                                    <% } %> 
                                    
                                    <input type="hidden" name="id" value="<%= wallet.id  %> ">
                                </div>
                                <div class="card-footer text-right">
                                    <button class="btn btn-primary mr-1"
                                    type="submit">Update Wallet</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
<%- include("../partials/footer2") %>