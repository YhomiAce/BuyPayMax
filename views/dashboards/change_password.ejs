<!-- header -->
<%- include("../partials/header_admin") %>
<%- include("../partials/sidebar") %>

<!-- Main Content -->
<div class="main-content">
    <%- include("../partials/alerts") %>
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <form action="/admin-update-password" method="POST" class="needs-validation" novalidate="">
                        <div class="card">
                            <div class="card-header">
                                <h4>Change Password</h4>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="oldPassword">Current Password</label>
                                    <input id="oldPassword" type="password" class="form-control" name="oldPassword" tabindex="1"
                                        required autofocus>
                                    <div class="invalid-feedback">
                                        Please fill in your Current Password
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password">New Password</label>
                                    <input id="password" type="password" class="form-control" name="password" tabindex="1"
                                        required autofocus>
                                    <div class="invalid-feedback">
                                        Please fill in your new password
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="confirmPassword">Confirm Password</label>
                                    <input id="confirmPassword" type="password" class="form-control" name="confirmPassword" tabindex="1"
                                        required autofocus>
                                    <div class="invalid-feedback">
                                        Please confirm your passwords
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-right">
                                <button class="btn btn-primary mr-1" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
