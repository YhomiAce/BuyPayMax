<!-- Blog Section Starts -->
<section class="blog-section">
    <div class="container blog-main">
      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">

            <% for(let i=0; i<blogs.length; i++) { %> 

                <div class="blog-block-container">
                    <div class="blog-block">
                    <div class="row blog-block-row">
                        <div class="col-md-7">
                            <img src="<%= blogs[i].image %> " alt="Image" class="img-thumbnail" />
                        </div>
                        <div class="col-md-5 blog-title-div">
                            <p class="blog-title"><%= blogs[i].title  %></p>
                            <p class="blog-sub-title"><%= blogs[i].author  %></p>
                        </div>
                    </div>
                    </div>
                    <div>
                        <p class="blog-content">
                            <%= stripHtml(blogs[i].body)  %>
                        </p>
                        <p class="text-secondary">
                            <i class="fas fa-calendar"></i> <%= moment(blogs[i].images).format("LLLL")  %> &nbsp;&nbsp;&nbsp;| &nbsp;&nbsp;
                        </p>
                    </div>
                </div>
            
            <% } %>
